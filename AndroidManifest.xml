<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.betaminus.phonepowersource"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/canvas_icon"
        android:label="@string/app_name" >
        <receiver
            android:name="com.betaminus.phonepowersource.PowerSourcePlugin"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.pennas.pebblecanvas.plugin.REQUEST_DEFINITIONS" />
                <action android:name="com.pennas.pebblecanvas.plugin.REQUEST_UPDATE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.betaminus.phonepowersource.PowerSourceReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>